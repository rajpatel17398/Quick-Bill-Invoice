<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center">

            <TextView
                android:id="@+id/vp_coname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Name"

                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center">

            <TextView
                android:id="@+id/vp_pa1name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Party 1 Name"

                android:textSize="20dp" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center">

            <TextView
                android:id="@+id/vp_pa2name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Party 2 Name"

                android:textSize="20dp" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center">

            <TextView
                android:id="@+id/vp_mo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Party1 Mobile"

                android:textSize="20dp" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center">

            <TextView
                android:id="@+id/vp_mo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Party2 Mobile"

                android:textSize="20dp" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center">

            <TextView
                android:id="@+id/vp_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"

                android:textSize="20dp" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center">

            <TextView
                android:id="@+id/vp_gstno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GST No"

                android:textSize="20dp" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center">

            <TextView
                android:id="@+id/vp_panno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PAN No"

                android:textSize="20dp" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center">

            <TextView
                android:id="@+id/vp_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"

                android:textSize="20dp" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center">

            <TextView
                android:id="@+id/vp_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"

                android:textSize="20dp" />

        </TableRow>
    </TableLayout>
</RelativeLayout>