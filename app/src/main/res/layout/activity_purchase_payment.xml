<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Purchase_payment">

    <Spinner
        android:id="@+id/pp_spinner"
        android:layout_width="200dp"
        android:layout_height="38dp"

        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="35dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/pp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/pp_spinner"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="106dp"
        android:layout_marginBottom="0dp"
        android:background="#FF9AA7EA"
        android:text="SEARCH"/>


    <HorizontalScrollView
        android:layout_marginTop="10dp"
        android:layout_below="@id/pp_spinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent">           <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/display_button"
            android:id="@+id/ld"
            >

            <ListView
                android:id="@+id/pp_listview_layout"
                android:layout_width="458dp"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>

    </HorizontalScrollView>
</RelativeLayout>