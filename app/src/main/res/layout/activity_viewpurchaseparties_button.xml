<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.viewpurchaseparties_button"
   >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Company Name"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/updatepurchasecompany"
        android:layout_below="@id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/t2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Party1 Name"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/updatepurchaseparty1"
        android:layout_below="@id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/t3"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Party2 Name"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/updatepurchaseparty2"
        android:layout_below="@id/t3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/t4"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Party1 Mobile"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/updatepurchasemo1"
        android:layout_below="@id/t4"
        android:maxLength="10"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/t5"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Party2 Mobile"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/updatepurchasemo2"
        android:layout_below="@id/t5"
        android:maxLength="10"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/t6"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/updatepurchaseemail"
        android:layout_below="@id/t6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/t7"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GST NO"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/updatepurchasegstno"
        android:layout_below="@id/t7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/t8"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAN NO"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/updatepurchasepanno"
        android:layout_below="@id/t8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/t9"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/updatepurchaseaddress"
        android:layout_below="@id/t9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/updatepurchasebutton"
        android:text="update"
        android:background="@drawable/capsual_shape"
        android:layout_width="150dp"
        android:textColor="#ffff"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        />
</LinearLayout>
</ScrollView>