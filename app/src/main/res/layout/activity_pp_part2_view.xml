<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PP_part2_view">


        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/pp_table2"
            >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:id="@+id/purchase_history_row0"
                android:layout_weight="1"
                android:gravity="center"

                >




            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f1f1f1"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:id="@+id/purchase_history_row1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Total:"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/ppn3"
                    android:layout_width="233dp"
                    android:layout_height="44dp"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="#number"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f1f1f1"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:id="@+id/purchase_history_row2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Paid:"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/ppn4"
                    android:layout_width="233dp"
                    android:layout_height="44dp"
                    android:text="#number"
                    android:gravity="center"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f1f1f1"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:id="@+id/purchase_history_row3"
                >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Pending:"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/ppn5"
                    android:layout_width="233dp"
                    android:layout_height="44dp"
                    android:text="#number"
                    android:gravity="center"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
            </TableRow>

        </TableLayout>


        <EditText
            android:id="@+id/pp_view_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pp_table2"
            android:hint="ADD"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>

        <Button
            android:id="@+id/pp_addbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pp_view_add"
            android:text="SUBMIT"
            android:layout_marginLeft="160dp"
            android:textColor="#fff"
            android:background="@color/colorPrimary"/>




</RelativeLayout>